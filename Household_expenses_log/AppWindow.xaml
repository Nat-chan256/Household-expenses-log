            <TabItem Header="Статистика">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Добавить операцию">
                <Grid>
                    <ComboBox x:Name="cb_sent_got" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Width="148">
                        <ComboBoxItem Content="Получено"/>
                        <ComboBoxItem Content="Потрачено" IsSelected="True"/>
                    </ComboBox>

                    <TextBox HorizontalAlignment="Left" Height="23" Margin="208,70,0,0" TextWrapping="Wrap" Text="Введите сумму" VerticalAlignment="Top" Width="148"
                             Foreground="Silver"/>
                    <Label Content="₽" HorizontalAlignment="Left" Margin="361,63,0,0" VerticalAlignment="Top" FontSize="18"/>
                    <Label Content="Выберите категорию" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" FontSize="18"/>
                    <WrapPanel x:Name="wp_categories" HorizontalAlignment="Left" Width="381" Margin="0,160,0,113">
